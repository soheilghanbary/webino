{
  "plugins": ["prettier-plugin-tailwindcss"],
  "printWidth": 120,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "arrowParens": "always",
  "parser": "typescript",
  "pluginSearchDirs": false,
  "importOrder": [
    "^react",
    "<THIRD_PARTY_MODULES>",
    "^@apollo",
    "^@tanstack",
    "^@",
    "^[./]"
  ],
  "tailwindFunctions": ["tw"],
  "tailwindAttributes": ["tw"]
}